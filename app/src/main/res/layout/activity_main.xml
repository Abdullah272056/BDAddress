<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/divisionTextViewId"
       android:background="#ECC6FB"
       android:layout_marginTop="10dp"
       android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
       android:padding="5dp"
       android:textSize="30sp"
       android:hint="Please select division"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/districtTextViewId"
        android:background="#ECC6FB"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:padding="5dp"
        android:textSize="30sp"
        android:hint="Please select district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/thanaTextViewId"
        android:background="#ECC6FB"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:padding="5dp"
        android:textSize="30sp"
        android:hint="Please select thana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>